{
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "groupName": "react packages",
      "matchPackagePatterns": ["^react", "react-dom"],
      "groupSlug": "react"
    },
    {
      "groupName": "vite & plugins",
      "matchPackagePatterns": ["^vite", "@vitejs/"],
      "groupSlug": "vite"
    },
    {
      "groupName": "eslint plugins",
      "matchPackagePatterns": ["^eslint", "eslint-", "@eslint/"],
      "groupSlug": "eslint"
    },
    {
      "groupName": "type definitions",
      "matchPackagePatterns": ["^@types/"],
      "groupSlug": "types"
    },
    {
      "description": "Auto-merge devDependencies on patch/minor",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Auto-merge production deps on patch only",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ]
}
